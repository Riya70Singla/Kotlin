fun main(args: Array<String>) {
    var PersonObj=Person()  //no new keyword required
    PersonObj.name="Riya"
    println("The name of the person is ${PersonObj.name}")
    PersonObj.display()
}
class Person{
    var name:String=""
fun display(){
    print(name)
}
}
